<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="325dp"
                tools:context="com.Activities.TrackerFragment"

                android:layout_alignParentStart="true" />

            <TextView
                android:textColor="@android:color/white"
                android:background="#0E8496"
                android:text="Stations By Line"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <GridView
                android:numColumns="3"
                android:id="@+id/byLineList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:transitionGroup="false">

            </GridView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:background="#c75b5a5a"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/destSearch"
                android:layout_gravity="bottom"
                android:layout_weight="6"/>

            <Button
                android:layout_marginRight="15dp"
                android:id="@+id/searchButton"
                android:text="Search"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_width="0px"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#ff388519"
                android:layout_weight="3" />
            <!--Button
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/searchButton" /-->
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>